<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-section">
			<img src="/assets/img/#" alt="#"/>

				<h1 class='red'>Welcome to Santa's Helper</h1>
		</div>

		<div class="col-xs-6 text-center" class="task">
			<div class="form-group">
				<div class="row">
							<div class = "col-sm-8 offset-md-2">
								<h3>Signin</h3>
								<form id="signin" name="signin" method="post" action="signin">
									<div class="form-group">
										<label for="email">Email Address</label>
										<input placeholder="Email" class="text" name="email" type="text" />
									</div>
									<div class="form-group">
										<label for="password">Password</label>
										<input placeholder="Password" name="password" type="password" />
									</div>
									<div class="form-group">
										<input class="btn" type="submit" value="Sign In" />
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>

		<section class="col-xs-6 text-center" class="task">
			<div class="form-group">
				<div class="row">
						<div class = "col-sm-8 offset-md-2">
							<h3>Signup</h3>
							<form id="signup" name="signup" method="post" action="/signup">
								<div class="form-group">
									<label for="email">Email Address</label>
									<input placeholder='Email' class="text form-control" name="email" type="email" />
								</div>
								<div class="form-group">
									<label for="firstname">First name</label>
									<input placeholder='First name' class="form-control" name="firstname" type="text" />
								</div>
								<div class="form-group">
									<label for="lastname">Last name</label>
									<input placeholder="Last name" class="form-control" name="lastname" type="text" />
								</div>
								<div class="form-group">
									<label for="password">Password</label>
									<input placeholder='Password' class="form-control" name="password" type="password" />
								</div>
								<div class="form-group">
									<input class="btn btn-primary" type="submit" value="Sign Up" />
								</div>
							</form>
						</div>
				</div>
			</div>
		</section>
	</div>
</div>
