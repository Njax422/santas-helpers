	{{!-- Title Row --}}
	<div class="row">
		<div class="col-xs-12 text-center" id="top-section">
			{{!-- <img src="/assets/images/#" alt=""/> --}}
			<h2 class='red'>Santa's Little Helper</h2>
		</div>
	</div>
	<br><br><br><br><br><br>
	{{!-- Wish List / Gift Row --}}
	<div class="row">
      <div class="col-sm-6">
        <br>
        <div class="panel panel-primary">
          <div class="panel-heading" style="background-color: #04a8f4">
            <h3 class="panel-title"><strong>What's on your wish list?</strong></h3>
          </div>
          <div class="panel-body">
            <!-- Form to add tasks -->
            <form method='post' action='/wishlist'>
              <div class="form-group">
                <label for="end-year">Enter Gift:</label>
                <input type="text" class="form-control" name='gift' id="child-gift">
              </div>
              <button class="btn btn-secondary" type="submit">Add Gift</button>
            </form>
          </div>
        </div>
     </div>

	{{!-- <div class="col-sm-1">
    </div> --}}
      <!-- My Wishlist Panel-->
    <div class="col-sm-6">
    <br>
		<div class="panel panel-primary">
		  <div class="panel-heading" style="background-color: #04a8f4">
		    <h3 class="panel-title">My Wish List</h3>
		  </div>
		  <div class="panel-body">
		    <p>{{#each gift}}
            <div>
              <p>{{this.dataValues.gift}}
            </div>
            {{/each}}</p>
		  </div>
		</div>
	</div>


 {{!-- Naught or Nice Message box --}}
	<div class="row">
		<div class="col-sm-12">
		<div class="panel panel-primary">
		  <div class="panel-heading" style="background-color: #04a8f4">
		    <h3 class="panel-title">Are You Naughty or Are You Nice?</h3>
		  </div>
		  <div class="panel-body">
		    <p>insert naughy or nice message here </p>
		  </div>
		</div>
		</div>
	
	 <br>
{{!-- Row of Tasks --}}
	<div class="row">

		<div class="col-sm-6">
		<br>
			<div class="panel panel-primary">
				<div class="panel-heading" style="background-color: #04a8f4">
					<h3 class="panel-title">My To-Do List</h3>
				</div>
				<div class="panel-body">
				 					{{#each task}}
					{{#unless completed}}
						<div class="text-center">
						{{this.task_name}}
			        	{{this.task}}
						<form method='POST' action='/api/burgers/update?_method=PUT' class='button-size'>
							<input input type='hidden' type='text' name='id' value={{this.id}}><br>
							<button class="addtltext" type='submit'class='btn btn-default'>Complete task with button Press!</button>
						</form>
						</div>
					{{/unless}}
					{{/each}}
				</div>
			</div>
		</div>

	<div class="col-sm-6">
	    <br>
			<div class="panel panel-primary">
			  <div class="panel-heading" style="background-color: #04a8f4">
			    <h3 class="panel-title">Done</h3>
			  </div>
			  <div class="panel-body">
			    {{#each tasks}}
				{{#if completed}}
					<input class='form-control text-center' type='text' placeholder='{{this.task_name}}' readonly>
				{{/if}}
				{{/each}}
			  </div>
			</div>
		</div>



