<body>
<div id="childbackground">
  <div class="container">
    <div class="row">
      <div class="col-xs-4"></div>
      <div class="col-lg-12 text-center" id="top-section">
      <h2 class='red'><strong>Santa's Little Helper</strong></h2>
    </div>
  </div>
    <!-- <button class="btn btn-primary">Logout</button> -->
   <nav>
    <div class="container">
        <div class=row>
            <div class="col-lg-4">
                <ul class="nav">
                  <li class="nav-item">
                    <a class="nav-link active" href="/logout">Logout</a>
                  </li>
                </ul>
            </div>
        </div>
  </nav>
	<br><br>
	<div class="row">
      <div class="col-sm-6">
        <br>
        <div class="panel panel-primary">
          <div class="panel-heading" style="background-color: #820bf9">
            <h3 class="panel-title"><strong>What's on your wish list?</strong></h3>
          </div>
          <div class="panel-body">
            <!-- Form to add tasks -->
            <form method='post' action='/wishlist'>
              <div class="form-group">
                <label>Enter Gift:</label>
                <input type="text" class="form-control" name='gift' id="child-gift">
              </div>
              <button class="btn btn-secondary" type="submit">Add Gift</button>
            </form>
          </div>
        </div>
     </div>

    <div class="col-sm-1">
    </div>

    <div class="col-sm-4">
      <!-- My Wishlist Panel-->
      <div class="panel panel-primary">
        <div class="panel-heading" style="background-color: #820bf9">
          <h3 class="panel-title"><strong>My Wish List</strong></h3>
            {{#each gift}}
            <div>
              <p>{{this.dataValues.gift}}
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

	<div class="row">
		<div class="col-sm-5">
			<div class="panel-heading" style="background-color: #820bf9">
			<h2 class="panel-title">My To-Do List</h2>
					{{#each task}}
					{{#unless completed}}
						<div class="text-center">
			        	{{this.task}}
						<form method='POST' action='/task/update/{{this.id}}' class='button-size'>
							<input type='hidden' type='text' name='completed' value="true"><br>
							<button class="addtltext" type='submit'class='btn btn-default'>Complete task with button Press!</button>
						</form>
						</div>
					{{/unless}}
					{{/each}}
			</div>
		</div>

		<div class="col-sm-2"></div>

		<div class="col-sm-5">
			<div class="panel-heading" style="background-color: #820bf9">
			<h2 class="panel-title">Done</h2>
			{{#each task}}
				{{#if completed}}
					<div class="text-center">
			        	{{this.task}}
					</div>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>
