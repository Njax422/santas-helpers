<body>
<div id="parentbackground">
  <div class="container">
    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8 text-center" id="top-section">
      <h1 class="dashboard">Welcome Parents</h1>
    </div>
  </div>

  <nav>
    <div class="container">
        <div class="row">
          <a class="logout" href="/logout">Logout</a>
        </div>
    </div>
  </nav>

   <div class="row">

    <div class="col-sm-6">
      <div class="panel">
        <div class="panel-heading" style="background-color:#1E1E33">
          <h3 class="panel-title header-fonts">What does your child need to do in order to stay on Santa's Nice list?</h3>
        </div>
        <div class="panel-body">
          <form method='post' action='/child'>
            <div class="form-group">
              <input type="text" class="form-control" name='task' id="new-task">
            </div>
            <button class="btn btn-default" type="submit">Add Task</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-sm-1">

    </div>
      <div class="btn-group col-sm-4" role="group" aria-label="...">
        <h3 header-fonts>Has your child been naughty or nice today?</h3>
        <div class="text-center">
          <button type="button" class="btn btn-primary btn-lg" style= "background-color:#325B32; border:3px solid #325B32">Naughty</button>
          <button type="button" class="btn btn-primary btn-lg" style= "background-color:#A62325; border:3px solid #A62325">Nice</button>
        </div>
      </div>
    </div>

<br><br>

  <div class="row">
    <div class="col-sm-3">
      <div class="panel">
        <div class="panel-heading" style="background-color:#1E1E33">
          <h3 class="panel-title header-fonts">Tasks To Do</h3>
        </div>
        <div class="panel-body text-center" id="santa-section">
          {{#each task}}
            {{#unless completed}}
              <div>
                <p>{{this.dataValues.task}}
              </div>
            {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-sm-1"></div>

    <div class="col-sm-3">
      <div class="panel">
        <div class="panel-heading" style="background-color:#1E1E33">
          <h3 class="panel-title header-fonts">Tasks Completed</h3>
        </div>
        <div class="panel-body text-center" id="santa-section">
          {{#each task}}
            {{#if completed}}
              <div>
                <form method='POST' action='/task/update/{{this.id}}' class='button-size'>
                  <input type='hidden' type='text' name='completed' value="false">
                  {{this.task}}
                  <button class="btn btn-default" type='submit'class='btn btn-default'>Redo Task</button>
                </form>
              </div>
              <br>
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>

  <div class="col-sm-1"></div>

  <div class="col-sm-4">
    <div class="panel">
      <div class="panel-heading" style="background-color: #1E1E33; border:3px solid #1E1E33">
        <h3 class="panel-title header-fonts">Child's Wish List</h3>
      </div>
      <div class="panel-body text-center">
        {{#each gift}}
          <div>
            <p>{{this.dataValues.gift}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<br><br><br>

  <div class="row">
    <div class="col-sm-4"></div>
      <a class="btn btn-primary btn-lg col-sm-4 header-fonts" href="/child" role="button" style="background-color: #210808; border:3px solid #210808">Navigate to Child's page</a>
  </div>

  <br><br>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="helper.js"></script>
</body>
</html>
