
<body>
<div id="parentbackground">
  <div class="container">
    <div class="row">
      <div class="col-xs-4"></div>
      <div class="col-xs-8 text-center" id="top-section">
      <h1 class="dashboard">Welcome Parents</h1>
    </div>
  </div>
  <nav>
    <div class="container">
        <div class=row>
            <div class="col-lg-4">
                <ul class="nav">
                  <li class="nav-item">
                   <a class="nav-link active" href="/logout">Logout</a>
                  </li>
                </ul>
            </div>
        </div>
    </div>
  </nav>
   <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-primary">
        <div class="panel-heading" style="background-color:#1E1E33">
          <h3 class="panel-title"><strong>What does your child need to do in order to stay on Santa's Nice list?</strong></h3>
        </div>
      <div class="panel-body">
          <!-- Form to add tasks -->
          <form method='post' action='/child'>
            <div class="form-group">
              <label>Enter Task:</label>
              <input type="text" class="form-control" name='task' id="new-task">
            </div>
            <button class="btn btn-secondary" type="submit">Add Task</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-sm-2">
    </div>
      <div class="btn-group col-sm-4" role="group" aria-label="...">
      <h3><strong>Has your child been Naughty or Nice?</strong>
      </h3>
      <button type="button" class="btn btn-primary btn-lg" style= "background-color:#325B32; border:3px solid #325B32">Nice</button>
      <button type="button" class="btn btn-primary btn-lg" style= "background-color:#A62325; border:3px solid #A62325">Naughty</button>
    </div>
</div>
<br><br>

  <div class="row">
    <div class="col-sm-7">
      <div class="panel panel-primary" style="background-color: #1E1E33">
        <!-- Task Management Panel-->
        <div class="panel-heading" style="background-color:#1E1E33; border:3px solid #1E1E33">
          <h3 class="panel-title"><strong>Task Management</strong></h3>
        <div class="panel-body" id="santa-section"style="background-color:#1E1E33; border:3px solid #1E1E33">
          <p>To do</p>
          {{#each task}}
            {{#unless completed}}
            <!-- add delete and edit button  -->
              <div>
                <p>{{this.dataValues.task}}
              </div>
            {{/unless}}
          {{/each}}
          <p>Completed</p>
          {{#each task}}
            {{#if completed}}
              <div class="text-center">
                  {{this.task}}
                <form method='POST' action='/task/update/{{this.id}}' class='button-size'>
                  <input type='hidden' type='text' name='completed' value="false"><br>
                  <button class="addtltext" type='submit'class='btn btn-default'>Redo task</button>
                </form>
              </div>
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>











  <div class="col-sm-1"></div>

  <div class="col-sm-4">
  <!-- Wishlist Panel-->
  <div class="panel panel-primary">
    <div class="panel-heading" style="background-color: #1E1E33; border:3px solid #1E1E33">
      <h3 class="panel-title"><strong>Child's Wish List</strong></h3>
        {{#each gift}}
        <div>
          <p>{{this.dataValues.gift}}
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<br><br><br>
  <div class="row">
    <div class="col-sm-4"></div>
      <a class="btn btn-primary btn-lg col-sm-4" href="/child" role="button" style="background-color: #210808; border:3px solid #210808">Navigate to Child's page</a>
    </div>
  </div>
  <br><br><br><br><br><br>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="helper.js"></script>
</body>
</html>
